<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.postagestampscollectorapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/heart_postage_stamp"
        android:label="@string/app_name"
        android:roundIcon="@drawable/heart_postage_stamp"
        android:supportsRtl="true"
        android:theme="@style/Theme.PostageStampsCollectorApp">
        <activity android:name=".ViewStampActivity"></activity>
        <activity android:name=".UserSignupActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CollectionCreationActivity"
            android:theme="@style/Theme.AppCompat.CustomPopUpTheme" />
        <activity android:name=".StampRegistrationActivity" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>