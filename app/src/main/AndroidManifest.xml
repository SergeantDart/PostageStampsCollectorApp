<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.postagestampscollectorapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/AppName"
        android:roundIcon="@drawable/app_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.PostageStampsCollectorApp">
        <activity android:name=".Activities.ChartActivity"></activity>
        <activity android:name=".Activities.UserProfileActivity" />
        <activity android:name=".Activities.ViewStampActivity" />
        <activity android:name=".Activities.SearchOtherUsersActivity" />
        <activity android:name=".Activities.UserSignupActivity" />
        <activity android:name=".Activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.CollectionCreationActivity"
            android:theme="@style/Theme.AppCompat.CustomPopUpTheme" />
        <activity android:name=".Activities.StampRegistrationActivity" />
        <activity android:name=".Activities.MainActivity" />
    </application>

</manifest>